//challenge 1

float xpos=400;

void setup(){
  size (800,800);
}

void draw(){
  background(0,0,0);
  ellipse(xpos, 400, 50, 50);
}

void mousePressed(){
  xpos=xpos+15;
}

void keyPressed(){
  xpos=xpos-15;
}

