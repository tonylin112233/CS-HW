//challenge3
void setup(){
  size(800,800);
}

void draw(){
  background(255,255,255);
  fill(255,0,0);
  triangle(0,0,mouseX, mouseY, 400,800);
  fill(0,255,0);
  triangle(800,0,mouseX, mouseY, 400,800);
  fill(0,0,255);
  triangle(0,0,800,0,mouseX,mouseY);
}
