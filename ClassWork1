//challenge2
void setup(){
  size(800,800); 
}

void draw(){
  background(255,255,255);
  stroke(0,0,255);
  strokeWeight(10);
  line(0,0,mouseX, mouseY);
  stroke(255,0,0);
  line(800,0,mouseX,mouseY);
  stroke(0,255,0);
  line(800,800, mouseX, mouseY);
}
